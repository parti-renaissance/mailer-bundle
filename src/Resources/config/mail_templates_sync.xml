<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="EnMarche\MailerBundle\Template\Synchronization\Synchronizer\MailjetSynchronizer" />
        <service id="en_marche_mailer.template.synchronizer.mailjet" alias="EnMarche\MailerBundle\Template\Synchronization\Synchronizer\MailjetSynchronizer" />

        <service id="EnMarche\MailerBundle\Template\Synchronization\SynchronizerRegistry" />

        <service id="EnMarche\MailerBundle\Consumer\MailTemplateSyncConsumer" public="true">
            <argument id="Doctrine\Common\Persistence\ObjectManager" type="service" />
            <argument id="EnMarche\MailerBundle\Repository\TemplateRepository" type="service" />
            <argument id="EnMarche\MailerBundle\Template\Synchronization\SynchronizerRegistry" type="service" />
            <tag name="monolog.logger" channel="en_marche_mailer" />
        </service>
    </services>
</container>
